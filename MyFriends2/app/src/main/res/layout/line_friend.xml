<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvtFriend"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvNameFriend"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@id/imgAvtFriend"
        android:fontFamily="cursive"
        android:gravity="center|left"
        android:paddingLeft="10dp"
        android:text="Nguyen Van A"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvStatusFriend"
        android:layout_width="412dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNameFriend"
        android:layout_alignStart="@id/tvNameFriend"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_style"
        android:fontFamily="serif-monospace"
        android:text=" It's very beautiful this morning!"
        android:textSize="14sp"
        android:textStyle="bold" />
</RelativeLayout>